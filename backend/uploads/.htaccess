# Security configuration for uploads directory
# Prevent execution of any scripts in this directory

# Disable directory browsing
Options -Indexes

# Disable PHP execution
<Files ~ "\.php$">
    Order allow,deny
    Deny from all
</Files>

# Remove script handlers
RemoveHandler .php .phtml .php3 .php4 .php5 .phps .pl .py .cgi .sh
RemoveType .php .phtml .php3 .php4 .php5 .phps .pl .py .cgi .sh

# Allow only specific file types
<FilesMatch "\.(pdf|doc|docx)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Block potentially dangerous files
<FilesMatch "\.(php|phtml|php3|php4|php5|phps|pl|py|cgi|sh|exe|bat|com|txt|xlsx|xls)$">
    Order allow,deny
    Deny from all
</FilesMatch>